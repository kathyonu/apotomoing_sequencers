<h1>Listing anagrams</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Sequence created</th>
    <th>Description</th>
    <th>Reference</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @anagrams.each do |anagram| %>
  <tr>
    <td><%= anagram.text %></td>
    <td><%= anagram.sequence_created_id %></td>
    <td><%= anagram.description %></td>
    <td><%= anagram.reference %></td>
    <td><%= link_to 'Show', anagram %></td>
    <td><%= link_to 'Edit', edit_anagram_path(anagram) %></td>
    <td><%= link_to 'Destroy', anagram, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

