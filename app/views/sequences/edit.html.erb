<h1>Editing Sequence</h1>
   <div id="spinner"></div>

<div class="sequence_edit">
  <%= form_tag "" do %>
  <%= text_field_tag "sequencetext" %><br />
  <span id="sequencetextnote">Enter data, then tab out</span>

  <%= submit_tag "Submit Sequence", :id => 'sequencetext_submit', :name => 'sequencetext_submit' %> <!--hidden-->
  <% end %>
</div>

<div class="editSequence">
  <%= render 'form' %>
</div>

