<%= form_for @sequence, do |f| %>
  <% if @sequence.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sequence.errors.count, "error") %> prohibited this sequence from being saved:</h2>

      <ul>
      <% @sequence.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :sequence_text %><br />
    <%= f.text_field :sequence_text, :readonly => true, :size => 222 %>
  </div>
  <div class="field">
    <%= f.label :sequence_creation %><br />
    <%= f.text_field :sequence_creation, :readOnly => true, :size => 255 %>
  </div>
  <div class="field">
    <%= f.label :sequence_complete %><br />
    <%= f.text_field :sequence_complete, :readOnly => true, :size => 255 %>
  </div>
  <!--div class="field"-->
  <!--%= f.label :sequence_complete_reverse %><br /-->
  <!--%= f.text_field :sequence_complete_reverse, :size => 255 %-->
  <!--/div-->
  <div class="field">
    <%= f.label :sequence_lexigram %><br />
    <%= f.text_field :sequence_lexigram, :readOnly => true, :size => 255 %>
  </div>
  <div class="field">
    <%= f.label :sequence_singular %><br />
    <%= f.text_field :sequence_singular, :readOnly => true, :size => 26 %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description, :size => 255 %>
  </div>
  <div class="field">
    <%= f.label :reference %><br />
    <%= f.text_field :reference, :size => 255 %>
  </div>
  <div class="field">
    <%= f.label :anagram %><br />
    <%= f.check_box :anagram %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.check_box :name %>
  </div>
  <div class="field">
    <%= f.label :phrase %><br />
    <%= f.check_box :phrase, :checked => 'checked' %>
  </div>
  <div class="field">
    <%= f.label :sexualities %><br />
    <%= f.check_box :sexualities %>
  </div>
  <div class="field">
    <%= f.label :external %><br />
    <%= f.check_box :external %>
  </div>
  <div class="field">
    <%= f.label :internal %><br />
    <%= f.check_box :internal %>
  </div>
  <div class="actions">
    <%= f.submit :id => 'sequence_submit', :name => 'sequence_submit' %>
  </div>
<% end %>
