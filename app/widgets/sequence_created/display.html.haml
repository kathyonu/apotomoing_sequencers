    %b app/widgets/sequence_created/display.html.haml
    %br
    %small the five sequences below are rendered by : 
    %br
    %small app/widgets/sequence_created/sequence_created.html.haml
    %br
    %small app/widgets/sequence_created/sequence_creation.html.haml
