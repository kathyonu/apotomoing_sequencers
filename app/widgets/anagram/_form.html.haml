.formAnagram

  = widget_div do
    = form_tag "", "data-event-url" => url_for_event(:submit), :remote => true do
      = text_field_tag 'anagram_text' 
      = label_tag 'anagram_text', 'Enter Anagram Text'
      = text_field_tag 'description'
      = label_tag 'description', 'description'
      = text_field_tag 'reference'
      = label_tag 'reference', 'reference'

      = submit_tag "Submit_Anagram", {:id => :anagramsubmit}

:javascript
  
  var anagramform = $j("##{widget_id} form");

  anagramform.anagramsubmit(function() {
    $j.ajax({url: anagramform.attr("data-event-url"), data: anagramform.serialize()})
    return false;
  });
